package typec;

public class Typecas{
	    public static void main(String[] args) {
	        // Implicit Type Casting (Widening Conversion)
	        int intValue = 10;
	        double doubleValue = intValue; // Implicitly converts int to double
	        System.out.println("Implicit Type Casting (Widening Conversion):");
	        System.out.println("intValue: " + intValue);
	        System.out.println("doubleValue: " + doubleValue);

	        // Explicit Type Casting (Narrowing Conversion)
	        double doubleNum = 20.55;
	        int intNum = (int) doubleNum; // Explicitly converts double to int (data may be lost)
	        System.out.println("\nExplicit Type Casting (Narrowing Conversion):");
	        System.out.println("doubleNum: " + doubleNum);
	        System.out.println("intNum: " + intNum);

	        // Example of data loss due to explicit casting
	        double largeDouble = 123456789.987654321;
	        int smallInt = (int) largeDouble; // Explicitly converts double to int (data is lost)
	        System.out.println("\nExample of Data Loss:");
	        System.out.println("largeDouble: " + largeDouble);
	        System.out.println("smallInt: " + smallInt);
	    }
}

